<div class="jumbotron jumbotron-fluid theme-bg">
  <div class="container">
    <h1 class="display-3">Menu</h1>
  </div>
</div>
<div class="container h-100">
  <div class="row pb-3 h-100">
    <div class="col col-sm-9 h-100 overflow-y pb-3">
      {{#each model.menu as |category|}}

        <div class="row theme-bg theme-panel mt-3 p-3" id={{category.category}}>
          <div class="col">
            <h3>{{category.category}}</h3>
            {{#each category.menuItems as |menuItem|}}
              <div>
                {{menuItem.menuId}} {{menuItem.name}} {{menuItem.price}}
              </div>
              <div>
                {{menuItem.desc}}
              </div>
            {{/each}}
          </div>
        </div>

      {{/each}}
    </div>
    <div class="col-sm-3 d-none d-sm-block">
      <div class="mt-3 p-2 theme-secondary-bg theme-panel">
        {{#each model.menu as |category|}}
          <a href={{concat "#" category.category}}><div class="py-2">{{category.category}}</div></a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
